<launch>
  <arg name="gui"  default="false"/>
  <arg name="world_name" default="$(find cpr_bringup)/worlds/empty.world"/>

  <!-- MOBILE PLATFORM -->
  <include file="$(find ridgeback_gazebo)/launch/ridgeback_world.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="world_name" value="$(arg world_name)"/>
  </include>

  <!-- UR5 ARM -->
  <!-- Fake Calibration -->
  <node pkg="rostopic" type="rostopic" name="fake_joint_calibration"
        args="pub /calibrated std_msgs/Bool true" />

  <!-- joint_state_controller (to publish states, an observer) -->
  <rosparam file="$(find cpr_bringup)/controllers/joint_state_controller.yaml" command="load"/>
  <node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" respawn="false" output="screen"/>

  <!-- arm controller (to send commands to the arm) -->
  <rosparam file="$(find cpr_bringup)/controllers/arm_controller_ur5.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

</launch>

